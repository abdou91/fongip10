<odoo>
	<data>
		<!--***************Carte carburant***************** -->
    	<record model="ir.ui.view" id="fongip_carte_carburant_view_form"> 
      		<field name="name">carte.carburant.form</field>
      		<field name="model">carte.carburant</field>
      		<field name="arch" type="xml">
        		<form string = "Carte carburant">
          			<sheet>
          				<group col="2" string="Informations">
          					<group>
          						<field name="name"/>
          						<field name="numero_carte"/>
                  				<field name="detenteur"/>
          					</group>
          					<group>
                  				<field name="type_carte"/>
                  				<field name="fournisseur"/>
          					</group>
          				</group>
          				<group col="3" string="QuantitÃ©">
          					<group>
          						<!--field name="quantite"/-->
                      <field name="quantite_charge"/>
          					</group>

          					<group>
          						<field name="quantite_consomme"/>
          					</group>
                    <group>
                      <field name="quantite_actuelle"/>
                    </group>
          				</group>
          				<group col="2" string="Couts">
          					<group>
          						<!--field name="montant"/-->
                      <field name="cout_chargement"/>
          					</group>
          					<group>
                      <field name="cout_consommation"/>
          						<!--field name="montant_consommation"/-->
          					</group>
          				</group>
                 <notebook>
                  <page string="Chargement">
                    <field name="chargement_carte_ids" >
                      <tree editable="bottom">
                        <!--field name="carte_carburant"/-->
                        <field name="date"/>
                        <field name="quantite" sum="Total"/>
                        <field name="prix_unitaire"/>
                        <field name="montant" sum="Total"/>
                      </tree>
                    </field>
                  </page>
                  <page string="Consommations">
                    <field name='consommation_carte_ids'>
                      <tree editable='bottom'>
                        <field name='vehicle_id' readonly="1"/>
                        <field name='liter' sum="Total"/>
                        <field name='price_per_liter' readonly="1"/>
                        <field name='amount' sum="Total"/>
                      </tree>
                    </field>
                  </page>
                  
                </notebook>
          </sheet>
        </form>
      </field>
    </record>
    <record id='fongip_carte_carburant_view_tree' model='ir.ui.view'>
      <field name="name">carte.carburant.tree</field>
      <field name="model">carte.carburant</field>
      <field name="arch" type="xml">
        <tree >
          <field name="name"/>
          <field name="detenteur"/>
          <field name="numero_carte"/>
          <field name="fournisseur"/>
          <!--field name="quantite" sum="Total"/-->
          <field name="quantite_charge" sum="Total"/>
          <field name="quantite_consomme" sum="Total"/>
          <!--field name="montant" sum="Total"/-->
        </tree>
      </field>
    </record>

