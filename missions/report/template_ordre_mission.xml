<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="missions.report_ordre_missions_document">
        <t t-call="web.external_layout">
            <div class="page">
                <style>
                    h2 {
                        font-family: "Franklin Gothic Medium";
                        font-weight: bold;
                        /*font-size : 16px;*/
                        color : #581112;
                        text-align : center;
                        margin-top : 15px;
                        margin-bottom : 15px;
                    }
                    h6 {
                        font-family: "Franklin Gothic Medium";
                        text-align : right;
                        margin-top : 0px;
                        margin-bottom : 0px;
                    }
                    .label {
                        font-family : Cambria;
                        font-weight : bold;
                        font-size : 12;
                    }
                    .uppercase {
                        text-transform: uppercase;
                    }
                </style>
                <!--div class="oe_structure"-->
                    <!--div class="row mt0 mb0">
                        <div class="col-xs-12 text-right">
                            N° <span t-field="o.numero_missionnaire"/>/FONGIP/DG/DGA
                        </div>
                    </div-->
                    <h6>N° <span t-field="o.numero_missionnaire"/>/FONGIP/AG/SG</h6>

                    <!--div class="row mt0 mb0">
                            <img class="col-xs-2" style="margin-top: 0 px !important;margin-bottom: 0 px !important;" src='/fongip_parc_automobile/static/description/fongip_logo.png'/>
                    </div-->
                    <h2>ORDRE DE MISSION</h2>
                    <!--h2 style="text-align:center;color:#581112;"><strong>ORDRE DE MISSION</strong></h2-->
                    <div class="">
                        <div class="label">
                            Nom : <span class="uppercase" t-esc="o.last_name"/>
                        </div><br/><br/>
                        <div class="label">
                            Prénom : <span class="uppercase" t-esc="o.first_name"/>
                        </div><br/><br/>
                        <div class="label">
                            Fonction : <span class="uppercase" t-esc="o.titre_poste"/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Trajet : </strong><span t-esc="o.mission_id.trajet"/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Objet de la mission: </strong>
                            <t t-raw="o.mission_id.objet_mission"/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Date de départ: </strong><span t-field="o.mission_id.date_debut" t-field-options='{"format":"d MMMM y"}'/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Date de retour: </strong><span t-field="o.mission_id.date_fin" t-field-options='{"format":"d MMMM y"}'/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Durée: </strong><span t-esc="o.mission_id.duree"/> Jour(s)
                        </div><br/><br/>
                        <div>
                            <strong class="label">Nombre de nuités: </strong><span t-field="o.mission_id.nombre_nuites"/>
                        </div><br/><br/>
                        <div>
                            <strong class="label">Moyen de transport: </strong>
                            <span t-field="o.mission_id.moyen_transport"/>
                            <!--t t-if="o.employee_id.est_chauffeur==non">
                            Voiture
                            </t>
                            <t t-if="o.employee_id.est_chauffeur==oui">
                            Voiture de mission de type
                            </t-->
                        </div><br/><br/>
                        <div>
                            <strong class="label">Prise en charge: </strong> <span t-field="o.prise_en_charge"/>
                        </div><br/><br/>
                        <h6>Fait à dakar, le : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/> </h6>
                        <br/><br/>
                        <h6>L'Administrateur Général </h6>
                        <!--div class="row">
                        <div class="col-xs-4 pull-right">
                            Fait à dakar, le : <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%d-%m-%Y')"/> 
                        </div>
                        </div><br/><br/>
                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <strong>L'Administrateur Général : </strong>
                            </div>
                        </div-->
                    </div>
                <!--/div-->
            </div> 
        </t>
    </template>

    <template id="report_ordre_missions">
        <t t-call="web.html_container">
        <!--t t-call="report.html_container"-->
            <t t-foreach="docs" t-as="o">
                <t t-call="missions.report_ordre_missions_document"/>
            </t>
        </t>
    </template>
      
</odoo>
    
